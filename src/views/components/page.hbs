{{! arguments: }}
{{! pageLang? }}
{{! pageTitle! }}
{{! pageLabel? }}
{{! pageHead? }}
{{! pageExcludeH1? }}
{{#unless pageLang}}
  {{assign pageLang="en"}}
{{/unless}}
{{#unless pageLabel}}
  {{assign pageLabel=pageTitle}}
{{/unless}}
<html lang="{{pageLang}}">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{pageTitle}}</title>
    <link href="@media/images/logo.png" rel="icon" />
    <link href="@scss/main.scss" rel="stylesheet" />
    <script src="@root/node_modules/flowbite/dist/flowbite.min.js" defer="defer"></script>
    <script src="@js/main.js" defer="defer"></script>
    {{#if pageHead}}
      {{> (lookup . 'pageHead') }}
    {{/if}}
  </head>
  <body>
    <div class="bg-white">
      {{> header}}
      {{#> main}}
        {{#unless pageExcludeH1}}
          <h1>{{pageLabel}}</h1>
        {{/unless}}
        {{> @partial-block}}
      {{/main}}
      {{> footer}}
    </div>
  </body>
</html>